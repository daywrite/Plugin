@{
    ViewBag.Title = "编辑用户";
}

@using UIShell.OSGi.MvcWebExtension
@using ContactsPlugin.ViewModels
@model AddOrEditContactViewModel

<!-- Page title -->
<div class="page-title">
    <h2><i class="icon-desktop color"></i> 增加用户 <small>新增一个用户</small></h2>
    <hr />
</div>
<!-- Page title -->

<div class="row">
    <!--col-md-6 start-->
    <div class="col-md-12">
        <!--box-info start-->
        <div class="col-md-12">
            <!--box-info start-->
            <div class="awidget">
                <div class="awidget-head">
                    <h3>用户信息</h3>
                </div>
                <div class="awidget-body">
                    <!--form-horizontal row-border start-->
                    @using (Html.BeginForm(Model.Added ? "Add" : "Edit", "Contacts", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                    {
                        @Html.HiddenFor(c => c.CurrentPageNum)
                        @Html.HiddenFor(c => c.PageSize)
                        @Html.HiddenFor(c => c.Contact.Id)

                        <div class="form-group">
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Contact.Name)</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(c => c.Contact.Name, new { @class = "form-control", @placeholder = "请输入联系人名称" })
                                @Html.ValidationMessageFor(c => c.Contact.Name)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Contact.Phone)</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(c => c.Contact.Phone, new { @class = "form-control", @placeholder = "请输入联系人电话" })
                                @Html.ValidationMessageFor(c => c.Contact.Phone)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">@Html.LabelFor(c => c.Contact.Email)</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(c => c.Contact.Email, new { @class = "form-control", @placeholder = "请输入联系人邮箱" })
                                @Html.ValidationMessageFor(c => c.Contact.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">保存用户</button>&nbsp;&nbsp;
                                <button type="button" class="btn btn-default" onclick="javascript: window.history.back();">返回</button>
                            </div>
                        </div>
                        
                        
                    }
                </div>
            </div>

        </div>
    </div>
</div>