@{
    ViewBag.Title = "Empty";
}

<!-- Page title -->
<div class="page-title">
    <h2><i class="icon-desktop color"></i> Make Post <small>Subtext for header</small></h2>
    <hr />
</div>
<!-- Page title -->

<div class="row">

    <div class="col-md-8">

        <div class="awidget">
            <div class="awidget-head">
                <h3>Make Post</h3>
            </div>

            <div class="awidget-body">

                <input type="text" class="form-control col-lg-8" placeholder="Enter Title"><br /><br />
                <textarea class="form-control" rows="8" name="input"></textarea>
                <div>&nbsp;</div>
                Word Count : 205
            </div>
        </div>

        <div class="awidget">
            <div class="awidget-head">
                <h3>Other Stuffs</h3>
            </div>

            <div class="awidget-body">
                <h5>Excerpt</h5>
                <p>You can add your experts here.</p>
                <div class="text-area">
                    <!-- Add the "cleditor" to textarea to add CLeditor -->
                    <textarea name="input" class="form-control col-lg-12"></textarea>

                </div>

                <hr />

                <h5>Custom Field</h5>
                <p>Add your custom fields here</p>


                <input class="form-control col-lg-12" type="text" placeholder="Name"><br />



                <input class="form-control col-lg-12" type="text" placeholder="Value">



            </div>
        </div>

    </div>

    <!-- post sidebar -->

    <div class="col-md-4">

        <div class="awidget">
            <div class="awidget-head">
                <h3>Details</h3>
            </div>

            <div class="awidget-body">

                <h5>Category</h5>
                <div class="check-box">
                    <label><input type='checkbox' value='check1' /> General</label>
                </div>
                <div class="check-box">
                    <label><input type='checkbox' value='check2' /> Latest News</label>
                </div>
                <div class="check-box">
                    <label><input type='checkbox' value='check3' /> Health</label>
                </div>

                <hr />
                <h5>Tags</h5>
                <input class="col-lg-12 form-control" type="text" placeholder="Tags"><br />

                <div class="buttons">
                    <button class="btn btn-default">Save Draft</button>
                    <button class="btn btn-info">Publish</button>
                    <button class="btn btn-danger">Trash</button>
                </div>

            </div>
        </div>

    </div>

</div>